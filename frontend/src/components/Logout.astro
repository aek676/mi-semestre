---
import { Icon } from 'astro-icon/components';
import { actions } from 'astro:actions';

const result = Astro.getActionResult(actions.logout);
---

<div class="p-4 space-y-2">
  <form method="post" action={actions.logout}>
    <button
      type="submit"
      class="w-full flex items-center gap-3 px-3 py-2 text-sm font-medium text-rose-600 rounded-md hover:bg-rose-50 transition-colors"
    >
      <Icon name="mdi:logout" class="w-5 h-5" />
      Log Out
    </button>
  </form>

  {result?.error && (
    <p class="text-red-600 text-sm mt-1">Error logging out</p>
  )}
</div>
