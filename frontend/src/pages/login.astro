---
import LoginComponent from '../components/Login.astro';
import Layout from '../layouts/Layout.astro';
import { actions } from 'astro:actions';

const result = Astro.getActionResult(actions.login);
if (result && !result.error) {
  return Astro.redirect('/ultra/profile');
}
---

<Layout>
  <div class="flex min-h-[80vh] items-center justify-center p-4">
    <div
      class="w-full max-w-md bg-brand-white rounded-2xl shadow-xl border border-brand-pale overflow-hidden"
    >
      <LoginComponent />
    </div>
  </div>
</Layout>
